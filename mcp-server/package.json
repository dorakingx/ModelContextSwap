  "dependencies": {
    "fastify": "^4.0.0",
    "@fastify/cors": "^10.0.1",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@coral-xyz/anchor": "^0.30.1",
    "@solana/web3.js": "^1.95.3",
    "dex-ai-sdk": "file:../sdk",
    "pino-pretty": "^11.2.2"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "ts-node": "^10.0.0"
  }
}
