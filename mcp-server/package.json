{
  "name": "mcp-server",
  "version": "1.0.0",
  "type": "module",
  "main": "src/server.ts",
  "bin": {
    "mcp-server": "./dist/mcp-server.js"
  },
  "scripts": {
    "start": "ts-node src/server.ts",
    "start:mcp": "ts-node src/mcp-server.ts",
